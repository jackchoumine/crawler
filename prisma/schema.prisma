// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  reviews     Review[]
}

model Review {
  id        String  @id @default(cuid())
  content   String
  rate      Int
  productId String
  product   Product @relation(fields: [productId], references: [id])
}
